<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
            android:id="@+id/card_trackable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:id="@+id/layout_card_content"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tvFighterName"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Creature Name" tools:ignore="HardcodedText"/>

            <TextView
                    android:id="@+id/initiative_modifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFighterName"
                    android:layout_marginEnd="3dp"
                    android:text="@string/player_cardview_initmodifier"/>

            <TextView
                    android:id="@+id/tvRolledInit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFighterName"
                    android:layout_toEndOf="@+id/initiative_modifier"
                    android:hint="+X" tools:ignore="HardcodedText"/>

            <TextView
                    android:id="@+id/tvFighterHp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/hit_points_fighter"
                    android:text="34" tools:ignore="HardcodedText"/>
            <TextView
                    android:id="@+id/hit_points_fighter"
                    android:layout_marginStart="3dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="HP" tools:ignore="HardcodedText"/>

            <TextView
                    android:id="@+id/tvFighterAc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/initiative_modifier"
                    android:layout_toStartOf="@+id/armor_class_fighter"
                    android:text="18" tools:ignore="HardcodedText"/>
            <TextView
                    android:id="@+id/armor_class_fighter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp"
                    android:layout_alignTop="@+id/initiative_modifier"
                    android:text="AC" tools:ignore="HardcodedText"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>