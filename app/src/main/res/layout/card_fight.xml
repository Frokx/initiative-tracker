<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
            android:id="@+id/card_fight"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_card_content"

                android:padding="8dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tvFighterName"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Fighter Name" tools:ignore="HardcodedText,RelativeOverlap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/rolled_initiative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFighterName"
                    android:text="@string/fight_activity_rolled_init"
                    app:layout_constraintTop_toBottomOf="@+id/tvFighterName"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tvRolledInit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFighterName"
                    android:layout_toEndOf="@+id/rolled_initiative"
                    android:hint="+X" tools:ignore="HardcodedText"
                    android:layout_marginStart="3dp"
                    app:layout_constraintStart_toEndOf="@+id/rolled_initiative"
                    app:layout_constraintTop_toBottomOf="@+id/tvFighterName"/>
            <LinearLayout
                    android:id="@+id/armor_class_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/healthLayout"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView
                        android:id="@+id/armor_class_fighter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[AC" tools:ignore="HardcodedText" android:layout_marginStart="3dp"/>
                <TextView
                        android:id="@+id/tvFighterAc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1]" tools:ignore="HardcodedText"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/healthLayout"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="?android:selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:focusable="true">

                <TextView
                        android:id="@+id/tvCurrentHp"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4" tools:ignore="HardcodedText"/>

                <TextView
                        android:id="@+id/separator"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/" tools:ignore="HardcodedText"/>

                <TextView
                        android:id="@+id/tvFighterHp"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4" tools:ignore="HardcodedText"/>

                <TextView
                        android:id="@+id/hit_points_fighter"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HP" tools:ignore="HardcodedText"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>